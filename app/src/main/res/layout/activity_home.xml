<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/red"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/toolbar2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="140dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            />

        <ImageView
            android:id="@+id/hainame"
            android:layout_width="362dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:src="@drawable/login1"
            android:background="@drawable/button_shape"
            />

        <TextView
            android:id="@+id/hairosifah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Hai, Rosifah Amalia"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="50dp"
            />

        <TextView
            android:id="@+id/ket"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hairosifah"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Get see all your notification accross all Telkom dapps in one place"
            android:textColor="@color/darkgrey"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/dashboard"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/ket"
            android:layout_marginStart="28dp"
            />

        <Button
            android:id="@+id/approval"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/ket"
            android:layout_marginStart="122dp"
            />
        <Button
            android:id="@+id/notification"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/ket"
            android:layout_marginStart="216dp"
            />
        <Button
            android:id="@+id/profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/ket"
            android:layout_marginStart="310dp"
            />
        <TextView
            android:id="@+id/textdashboard"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard"
            android:layout_marginLeft="32dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Dashboard"
            android:textColor="@color/black"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/textapproval"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/approval"
            android:layout_marginLeft="132dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Approval"
            android:textColor="@color/black"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/textnotification"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification"
            android:layout_marginLeft="219dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/textprofile"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_marginLeft="329dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/beritainternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hainame"
            android:fontFamily="@font/poppinsbold"
            android:text="Berita Internal"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layoutnews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/beritainternal"/>
    </RelativeLayout>

</ScrollView>
